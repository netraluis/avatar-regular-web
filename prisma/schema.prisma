generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


model Messages {
  id                        String     @id @default(cuid())
  role                      String
  message                   String
  threadId                  String
  domainId                  String  
  createdAt                 DateTime   @default(now())
}

model Domains {
  id                        String     @id @default(cuid())
  name                      String
  subDomain                 String
  customDomain              String
  welcome                   String
  logo                      String
  assistantId               String
  assistantName             String
  menuHeader                Json
  menuBody                  Json
  menufooter                String
  avatarId                  String    @default("")
  voiceAvatarId             String    @default("")
  headerDisclaimer          Json?     
  createdAt                 DateTime  @default(now())
}

